<h2>Portfolio</h2>

<% @projects.each do |project| %>
  <div class="project" id="<%= dom_id(project) %>">
    <h3><%= project.name %></h3>
    <p><%= project.description %></p>
    <div class="nav">
      <%= link_to 'Show', project, id: "show_link", remote: true %> |
      <%= link_to 'Edit', edit_project_path(project), id: "edit_link", remote: true %> |
      <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, id: "delete_link", remote: true %>
    </div>
  </div>
  <% end %>

  <br>
  <%= link_to 'Create New Project', new_project_path, id: "new_link", remote: true %>
